#include <iostream>
#include <string>
using namespace std;

int main() {
  while (true) {
    cout << "Hey there! This is the guessing game game! The computer here will choose a number from 1-100, and you have to guess it!;
    int num = rand() % 100 + 1;
    int count = 0;
    while (true) {
      int guess;
      cin << guess;
      if (guess == num) {
	count++;
	cout << "Aye you got it right! You took " + count + " tries!";
	cout << "Want to play again?";
	String x;
	cin << x;
	if (x == "y") {
	  continue;
	}
	else {
	  break;
	}
	
      }
      else {
	count++;
	cout << "Dang it your wrong!";
      }
    }
  }
  return 0;
}

    
